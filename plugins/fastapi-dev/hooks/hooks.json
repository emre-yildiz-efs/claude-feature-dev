{
  "description": "Auto-lint and format Python files after edits",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lint-python.sh",
            "timeout": 30,
            "statusMessage": "Linting Python..."
          }
        ]
      }
    ]
  }
}
